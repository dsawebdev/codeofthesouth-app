<div class="row">
  <div class="col-md-6 col-md-offset-3 col-sm-8 col-offset-sm-3 col-xs-8 col-xs-offset-2">
    {{#if reponseMessage}}

      <br>
      <div class="alert alert-success">
        <h4>Thank You! Your message has been sent</h4>
        <p>To: {{model.email}}</p>
        <p>Message: {{model.message}}</p>
        <p>Reference ID: {{model.id}}</p>
      </div>

    {{else}}

      <div class="card card-body">
        <h3 class="text-center">Contact Us</h3>
        <form>
          <div class="form-group has-feedback {{if model.isValid "has-success"}}">
            <label for="email">Email</label>
            <div class="input-group">
              <span class="input-group-addon">@</span>
              {{input type="email" class="form-control" placeholder="Please type your e-mail address" autofocus="autofocus" value=model.email}}
              {{#if model.isValid}}
                <span class="glyphicon glyphicon-ok form-control-feedback"></span>
              {{/if}}
            </div>
          </div>
          <div class="form-group">
            <label for="message">Message</label>
            {{textarea type="text" class="form-control" rows="7" placeholder="Your message. (At least 5 characters)" value=model.message}}
          </div>
          <div class="form-group">
            <button class="btn btn-primary btn-lg btn-block" type="button" {{action "contactSubmit" model}}
              disabled={{isDisabled}}>
              Send
            </button>;
          </div>
        </form>
      </div>

    {{/if}}
  </div>
</div>